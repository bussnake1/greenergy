{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": ".",
    "composite": true,
    "declarationMap": true,
    "emitDeclarationOnly": false,
    "importHelpers": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "allowImportingTsExtensions": false,
    "experimentalDecorators": true,
    "lib": ["es2021", "dom"],
    "module": "ESNext",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "strictPropertyInitialization": false,
    "strict": true,
    "target": "es2021",
    "paths": {
      "@greenergy/auth-client": ["libs/shared-client/auth-client/src"],
      "@greenergy/auth-client/*": ["libs/shared-client/auth-client/src/*"],
      "@greenergy/outage-client": ["libs/shared-client/outage-client/src"],
      "@greenergy/outage-client/*": ["libs/shared-client/outage-client/src/*"],
      "@greenergy/production-generation-units-unavailability": [
        "libs/shared/production-generation-units-unavailability/src"
      ],
      "@greenergy/production-generation-units-unavailability/*": [
        "libs/shared/production-generation-units-unavailability/src/*"
      ],
      "@greenergy/shared-ui": ["libs/shared-client/shared-ui/src"],
      "@greenergy/shared-ui/*": ["libs/shared-client/shared-ui/src/*"],
      "@nuxt/ui": ["node_modules/@nuxt/ui"],
      "@nuxt/ui/*": ["node_modules/@nuxt/ui/*"],
      "shared-client/api-key-client": ["libs/shared-client/api-key-client/src"],
      "shared-client/api-key-client/*": [
        "libs/shared-client/api-key-client/src/*"
      ],
      "shared-client/auth-client": ["libs/shared-client/auth-client/src"],
      "shared-client/auth-client/*": ["libs/shared-client/auth-client/src/*"],
      "shared/api-key": ["libs/shared/api-key/src"],
      "shared/api-key/*": ["libs/shared/api-key/src/*"],
      "shared/auth": ["libs/shared/auth/src"],
      "shared/auth/*": ["libs/shared/auth/src/*"]
    }
  }
}
